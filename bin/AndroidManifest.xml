            android:parentActivityName="play.ksunika.brainready.ShapeGame" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="play.ksunika.brainready.ShapeGame" />
        </activity>
        <activity
            android:name="play.ksunika.brainready.HighScoresColor"
            android:label="@string/title_activity_high_scores"
            android:parentActivityName="play.ksunika.brainready.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="play.ksunika.brainready.MainActivity" />
        </activity>
        <activity
            android:name="play.ksunika.brainready.HighScoresShape"
            android:label="@string/title_activity_high_scores_shape"
            android:parentActivityName="play.ksunika.brainready.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="play.ksunika.brainready.MainActivity" />
        </activity>
    </application>

</manifest>
